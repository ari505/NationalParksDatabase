<head>
    <meta charset="utf-8"> <!--allows for all characters to be entered into html file-->
    <title>Participants</title>
</head>

<h1>Participants</h1>
<p>Find the participants information listed here.</p>

{{!-- Create a table --}}
<table id="participants-table">

    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each participants.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the participant_id, first_name, last_name, age, phone_number, and email --}}
        {{#each participants}}
        <tr>
            <td>{{this.participant_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.age}}</td>
            <td>{{this.phone_number}}</td>
            <td>{{this.email}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
