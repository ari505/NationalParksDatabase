<head>
    <meta charset="utf-8"> <!--allows for all characters to be entered into html file-->
    <title>Park Employees</title>
</head>

<h1>Park Employees</h1>
<p>Find the park's employee information listed here.</p>

{{!-- Create a table --}}
<table id="employees-table">

    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each employees.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the campground_id, campground_name, and num_campsites--}}
        {{#each employees}}
        <tr>
            <td>{{this.employee_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.phone_number}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a new employee to table and DB --}}
<h2>Add New Employee</h2>
<p>To add a new employee to the system, please enter their information below and click 'Submit'.</p>
<form id="add-employee-form-ajax">
    <fieldset>
        <label for="first_name">First Name: </label>
            <input type="text" id="first_name" name="first_name" required>
        <label for="last_name">Last Name: </label>
            <input type="text" id="last_name" name="last_name" required>
        <label for="phone_number">Phone Number: </label>
            <input type="text" id="phone_number" name="phone_number" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="123-456-7890" required>
    </fieldset><br>
    <input type="submit">
</form>

<script src="./js/add_employee.js"></script>